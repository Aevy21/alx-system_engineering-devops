#!/usr/bin/env bash
# Configures Nginx server for redirection

# Update package lists
sudo apt-get -y update

# Install nginx
sudo apt-get -y install nginx

# Create a backup of the default configuration file
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.backup

echo "Hello World!" | sudo tee /var/www/html/index.html

# Replace the line with multiple lines using sed
sed -i 's/server_name _;/server_name _;\n\trewrite \/redirect_me https:\/\/www.youtube.com\/watch\?v=QH2-TGUlwu4 permanent;/' /etc/nginx/sites-enabled/default

sudo service nginx start
