#!/usr/bin/env bash
# This script retrieves DNS record information for specified or default subdomains.

# Function to display information about subdomains
display_subdomain_info() {
    local domain="$1"
    local subdomain="$2"
    local record_type=$(dig +short -t A "$subdomain.$domain" | awk '{print "A"}')
    local destination=$(dig +short "$subdomain.$domain" | awk '{print $1}')
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main script
domain="$1"
subdomain="$2"

if [ -z "$subdomain" ]; then
    # Display information for default subdomains
    display_subdomain_info "$domain" "www"
    display_subdomain_info "$domain" "lb-01"
    display_subdomain_info "$domain" "web-01"
    display_subdomain_info "$domain" "web-02"
else
    # Display information for specified subdomain
    display_subdomain_info "$domain" "$subdomain"
fi
