#!/usr/bin/env bash
# This script retrieves DNS record information for specified or default subdomains.

audit_subdomain() {
    local domain=$1
    local subdomain=$2

    if [ -z "$subdomain" ]; then
        subdomains=("www" "lb-01" "web-01" "web-02")
    else
        subdomains=("$subdomain")
    fi

    for sub in "${subdomains[@]}"; do
        record=$(dig +short $sub.$domain)
        record_type=$(dig +short $sub.$domain | awk '{print $4}')
        echo "The subdomain $sub is a $record_type record and points to $record"
    done
}

audit_subdomain "$1" "$2"
